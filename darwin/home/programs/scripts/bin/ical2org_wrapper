#!/usr/bin/env bash

ORG_DIR="$HOME/dev/org"
ICSFILE="$ORG_DIR/gcal/yevhenshymotiuk.ics"
ORGFILE="$ORG_DIR/gcal/yevhenshymotiuk.org"
URL=$(pass Calendar/Google/yevhenshymotiuk@gmail.com)

wget --no-check-certificate -O "$ICSFILE" "$URL"
AUTHOR="Yevhen Shymotiuk" \
    EMAIL="yevhenshymotiuk@gmal.com" \
    CALENDAR="google-calendar" \
    ical2org < "$ICSFILE" > "$ORGFILE"
